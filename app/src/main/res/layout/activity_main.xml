<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        app:cardCornerRadius="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="VIVIAN OKORIE"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile App developer"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/cardView"
        android:layout_margin="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@id/name"/>

    <ImageButton
        android:id="@+id/linkedIn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/cardView"
        android:background="@drawable/linkedin"
        app:layout_constraintStart_toStartOf="@id/name" />

    <ImageButton
        android:id="@+id/twitter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/linkedIn"
        android:background="@drawable/twitter1"
        android:layout_marginLeft="15dp"/>

    <ImageButton
        android:id="@+id/github"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/twitter"
        android:background="@drawable/github"
        android:layout_marginLeft="15dp"/>

    <ImageButton
        android:id="@+id/instagram"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/github"
        android:background="@drawable/instagram"
        android:layout_marginLeft="15dp"/>

<LinearLayout
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/cardView"
    android:layout_marginTop="10dp"
    android:backgroundTint="@color/white"
    android:orientation="vertical">
        <TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="I am an intermediate Mobile Application developer, Who is always looking for new challenges. I am also a final year student at the unversity of Lagos, Nigeria. I am also looking forward to finishing the HNG9" />
        <TextView
            android:id="@+id/skills"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="I provide the following services:"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile App Development"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/mobile_tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tools: Flutter, Dart, Kotlin, Android development, Cross-Platform App development"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:textStyle="italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Technical Writing/Content Writing"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/writing_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skills: Research and Article writing, Technical Writing, Content Writing "
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:textSize="20sp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/changeTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="Theme"/>
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>